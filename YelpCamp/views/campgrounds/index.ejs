<% layout("layouts/boilerplate") %>

<div id="cluster-map"></div>
<h1>All Campgrounds</h1>
<a href="/campgrounds/new">Add new campground</a>
<div class="mt-3"></div>
<% campgrounds.forEach(campground => { %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img src="<%= campground.images.length ? campground.images[0].url : 0 %>" class="img-fluid p-1" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title mt-md-1"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= campground.location %></small>
                </p>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View</a>
            </div>
        </div>
    </div>
</div>
<% }) %>

<script>
    const mapBoxToken = '<%- process.env.MAPBOX_TOKEN %>';
</script>

<script src="/js/clusterMap.js"></script>